<main>
  <p></p>
  <div class="container">
    <div class="row">

      <%= render 'users/list', user: @user ,book: @book %>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%=link_to user_path(@user) do %>
                      <%= attachment_image_tag @user, :profile_image,width: '20%', height: '20%', format: 'jpeg', fallback: "no_image.jpeg", class: "attachment user profile_image fallback" %>
                    <% end %>
                  </td>
                  <td><%=link_to book.title , book_path(book.id) %></td>
                  <td><%=book.body %></td>
                </tr>
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
  </div>
</main>