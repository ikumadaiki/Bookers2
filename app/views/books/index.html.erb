<div class="profile-container">
  <h2>User info</h2>
  <table>
    <tbody>
      <tr></tr>
      
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>  
      
    </tbody>  
  </table>
  
  
</div>

<h1 >Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>
      <tr>
        <td><%=book.title%></td>
        <td><%=book.body %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<h2 class="index-heading">New Book</h2>

<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h2><%= @book.errors.count %> errors prohibitted this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <div class="field">
    <%= f.label:title,"Title" %>
    <%=  f.text_field :title %>
  </div>

  <div class="field">
    <%=f.label:body,"Body" %>
    <%=  f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book',class:"create-book" %>
  </div>
<% end %>