<main>
  <p></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <%= render 'books/book', user: @user , book: @book %>
      </div>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%=link_to user_path(@user) do %>
                      <%= attachment_image_tag @user, :profile_image,size:"50x50" , format: 'jpeg', fallback: "no_image.jpeg", class: "attachment user profile_image fallback" %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body  %></td>
                  <%=render 'books/favorite', book:book %>
                  <td>コメント数：<%=book.book_comments.count %></td>

                </tr>

              <% end %>

            </tbody>
          </table>
        </div>
      </div>
  </div>
</main>