<div class="profile-container">
  <h2>User info</h2>
  <table>
    <tbody>

      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>

    </tbody>
  </table>
</div>

<h2 class="index-heading">New Book</h2>

<%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <%= f.label:title,"Title" %>
    <%=  f.text_field :title %>
  </div>

  <div class="field">
    <%=f.label:body,"Body" %>
    <%=  f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book',class:"create-book" %>
  </div>
<% end %>

<h2>Books</h2>
<table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title , book_path(book.id) %></td>
          <th><%= book.body %></th>
        </tr>
      <% end %>
     </tbody>
</table>