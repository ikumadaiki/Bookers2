<main>
  <p></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <%= render 'books/book', user: @user , book: @book  %>
      </div>

        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%=link_to user_path(@user) do %>
                      <%= attachment_image_tag user, :profile_image,width: '20%', height: '20%', format: 'jpeg', fallback: "no_image.jpeg", class: "attachment user profile_image fallback" %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%=link_to "Show" , user_path(user) %></td>
                </tr>

              <% end %>

            </tbody>
          </table>
        </div>
      </div>
  </div>
</main>