
<div class="col-md-3">
  <h2>User info</h2>
   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", class: "attachment user profile_image fallback" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>

    </tbody>
  </table>
  <div class="row mt-5">
    <%= link_to "" , edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog "  %>
  </div>

  <h2 class="mt-3">New Book</h2>

  <%= form_with model:book, local:true do |f| %>
    <% if book.errors.any? %>
      <div class="error-explanation">
        <h2><%= book.errors.count %> errors prohibitted this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

    <% else %>
      <div class="form-group">
        <%= f.label:title,"Title" %><br/>
        <%=  f.text_field :title %>
      </div>

      <div class="form-group">
        <%=f.label:body,"Opinion" %><br/>
        <%=  f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
      </div>
    <% end %>
  <% end %>
</div>
